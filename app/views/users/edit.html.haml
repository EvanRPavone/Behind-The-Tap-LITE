%h2.text-primary.mb-3 Edit User

.card.shadow-sm.p-3
  .card-body
    = form_with model: @user, url: user_path(company_name: @company.slug, id: @user), local: true do |f|
      .mb-3
        = f.label :first_name, "First Name", class: "form-label fw-bold"
        = f.text_field :first_name, class: "form-control", placeholder: "Enter first name", required: true

      .mb-3
        = f.label :last_name, "Last Name", class: "form-label fw-bold"
        = f.text_field :last_name, class: "form-control", placeholder: "Enter last name", required: true

      .mb-3
        = f.label :email, "Email", class: "form-label fw-bold"
        = f.email_field :email, class: "form-control", placeholder: "Enter email address", required: true

      .mb-3
        = f.label :role, "Role", class: "form-label fw-bold"
        = f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-select", prompt: "Select role", required: true

      .mb-3
        = f.label :company_id, "Company", class: "form-label fw-bold"
        = f.collection_select :company_id, @companies, :id, :name, { prompt: "Select company" }, class: "form-select"

      .mt-3.d-flex.justify-content-end
        = f.submit "Save Changes", class: "btn btn-primary px-4"
        = link_to "Cancel", user_path(company_name: @company.slug, id: @user), class: "btn btn-outline-secondary ms-2 px-4"
