#layoutAuthentication
  #layoutAuthentication_content
    %main
      .container
        .row.justify-content-center
          .col-lg-5
            .card.shadow-lg.border-0.rounded-lg.mt-5
              .card-header
                %h3.text-center.font-weight-light.my-4 Create Account
              .card-body
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = render "devise/shared/error_messages", resource: resource
                  .row.mb-3
                    .col-md-6
                      .form-floating.mb-3.mb-md-0
                        = f.text_field :first_name, autofocus: true, id:"inputFirstName", class: 'form-control'
                        = f.label :first_name
                    .col-md-6
                      .form-floating
                        = f.text_field :last_name, id:"inputLastName", class: 'form-control'
                        = f.label :last_name
                  .form-floating.mb-3
                    = f.email_field :email, id: "inputEmail", class: "form-control"
                    = f.label :email
                  .row.mb-3
                    .col-md-6
                      .form-floating.mb-3.mb-md-0
                        = f.password_field :password, autocomplete: "new-password", id:"inputPassword", class: 'form-control'
                        = f.label :password
                    .col-md-6
                      .form-floating.mb-3.mb-md-0
                        = f.password_field :password_confirmation, autocomplete: "new-password", id:"#inputPasswordConfirm",class: 'form-control'
                        = f.label :password_confirmation
                  .d-flex.align-items-center.justify-content-between.mt-4.mb-0
                    = f.submit "Create Account", class: "btn btn-primary"
              .card-footer.text-center.py-3
                .small
                  = link_to "Have an account? Go to login", new_session_path(resource_name)
