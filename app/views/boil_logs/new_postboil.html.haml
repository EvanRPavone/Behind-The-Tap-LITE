%h1 New Postboil Log
= form_with model: [@brew, @boil_log], url: create_postboil_brew_boil_logs_path, local: true do |f|
  .form-group
    = f.label :boil_achieved_time, "Boil Achieved Time"
    = f.datetime_local_field :boil_achieved_time, class: 'form-control'

  .form-group
    = f.label :boil_complete_time, "Boil Complete Time"
    = f.datetime_local_field :boil_complete_time, class: 'form-control'

  .form-group
    = f.label :post_boil_amount, "Post Boil Amount (gal)"
    = f.number_field :post_boil_amount, step: 0.01, class: 'form-control'

  .form-group
    = f.label :post_boil_gravity, "Post Boil Gravity"
    = f.number_field :post_boil_gravity, step: 0.001, class: 'form-control'

  .form-group
    = f.label :post_boil_ph, "Post Boil pH"
    = f.number_field :post_boil_ph, step: 0.01, class: 'form-control'

  .form-group
    = f.label :notes, "Notes"
    = f.text_area :notes, class: 'form-control'
  .actions
    = f.submit "Save Postboil Log", class: "btn btn-primary"
